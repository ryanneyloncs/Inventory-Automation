# Application Settings
APP_NAME="Inventory Management Automation"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT="development"

# Database Configuration
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/inventory_db"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS=10

# API Configuration
API_PREFIX="/api/v1"
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Security
SECRET_KEY="change-this-secret-key-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ML Models
FORECASTING_MODELS_PATH="./ml_models/forecasting"
MODEL_RETRAIN_INTERVAL_DAYS=7
MIN_TRAINING_SAMPLES=100

# Forecasting Parameters
FORECAST_HORIZON_DAYS=90
SEASONALITY_PERIOD=7
CONFIDENCE_INTERVAL=0.95

# Optimization Parameters
HOLDING_COST_PERCENTAGE=0.25
ORDERING_COST=50.0
STOCKOUT_COST_MULTIPLIER=2.0
LEAD_TIME_DAYS=7
SERVICE_LEVEL=0.95

# Reorder Logic
SAFETY_STOCK_Z_SCORE=1.65
REORDER_CHECK_INTERVAL_HOURS=6
AUTO_REORDER_ENABLED=True
MIN_ORDER_QUANTITY=1
MAX_ORDER_QUANTITY=10000

# Supplier API
SUPPLIER_API_TIMEOUT=30
SUPPLIER_API_RETRY_ATTEMPTS=3
SUPPLIER_API_RETRY_DELAY=2

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="noreply@inventory.com"

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Celery (Optional)
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# Data Processing
BATCH_SIZE=1000
MAX_WORKERS=4
