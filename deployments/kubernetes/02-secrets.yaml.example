apiVersion: v1
kind: Secret
metadata:
  name: inventory-secrets
  namespace: inventory-system
  labels:
    app: inventory-management
type: Opaque
stringData:
  # Database credentials (base64 encoded in production)
  DATABASE_URL: "postgresql+asyncpg://postgres:CHANGEME@postgres-service:5432/inventory_db"
  
  # Redis connection
  REDIS_URL: "redis://redis-service:6379/0"
  CELERY_BROKER_URL: "redis://redis-service:6379/0"
  CELERY_RESULT_BACKEND: "redis://redis-service:6379/0"
  
  # Security
  SECRET_KEY: "CHANGE-THIS-IN-PRODUCTION-USE-STRONG-SECRET"
  ALGORITHM: "HS256"
  
  # Email (optional)
  SMTP_USER: ""
  SMTP_PASSWORD: ""
  EMAIL_FROM: "noreply@inventory.com"
  
  # Supplier API Keys (add your real keys)
  SUPPLIER_ABC_API_KEY: "your-abc-api-key"
  SUPPLIER_GLOBAL_API_KEY: "your-global-api-key"
  SUPPLIER_FAST_API_KEY: "your-fast-api-key"
---
# Note: In production, create secrets using kubectl:
# kubectl create secret generic inventory-secrets \
#   --from-literal=DATABASE_URL='postgresql+asyncpg://user:pass@host:5432/db' \
#   --from-literal=SECRET_KEY='your-strong-secret-key' \
#   -n inventory-system
